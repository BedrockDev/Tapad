<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/layout_about"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_below="@+id/appbar"
	android:background="@color/white"
	android:visibility="gone">
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="-10dp"
		android:background="@color/white">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:layout_centerHorizontal="true"
				android:orientation="vertical">
				
				<include layout="@layout/fragment_cardview_music"/>
				
				<android.support.v7.widget.CardView
					android:id="@+id/cardview_ad"
					android:layout_width="360dp"
					android:layout_height="match_parent"
					android:clickable="true"
					android:foreground="?selectableItemBackground"
					app:cardBackgroundColor="@color/white"
					app:cardCornerRadius="4dp"
					app:cardElevation="4dp"
					android:visibility="gone"
					app:cardUseCompatPadding="true">
					
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_alignParentBottom="true">
						
						
						<!-- TODO need to resolve "Not enough space to show ad." - probably occurs from visibility.gone
						<com.google.android.gms.ads.NativeExpressAdView
							android:id="@+id/adView_about"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							ads:adSize="360x260"
							ads:adUnitId="@string/admob_unit_id_native_main">
						</com.google.android.gms.ads.NativeExpressAdView>
						-->
					</RelativeLayout>
				</android.support.v7.widget.CardView>
				
				<include layout="@layout/fragment_cardview_about"/>
				
				<include layout="@layout/fragment_cardview_dev"/>
				
				<View
					android:id="@+id/about_bottom_margin"
					android:layout_width="match_parent"
					android:layout_height="100dp"/>
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>