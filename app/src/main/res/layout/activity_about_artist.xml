<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_artist"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_artist_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:visibility="visible">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/layout_artist_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:transitionName="artist"
                            android:scaleType="centerCrop"
                            android:fitsSystemWindows="true"
                            android:src="@drawable/cardview_background_artist_hello"
                            app:layout_collapseMode="parallax" />

                        <View
                            android:id="@+id/layout_artist_text"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_alignParentBottom="true"
                            android:background="#28000000" />
                    </RelativeLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin" />

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_artist_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/layout_artist_detail_bio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/layout_artist_bio_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hello_bio"
                                    android:textColor="@color/hello"
                                    android:padding="16dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_divider" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:foreground="?selectableItemBackground"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/layout_artist_bio_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/about_bio_hello" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/dark_divider" />

                                    <RelativeLayout
                                        android:id="@+id/layout_artist_bio"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/layout_artist_bio_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:textSize="18sp"
                                            android:textColor="@color/dark_primary"
                                            android:text="@string/hello_bio_name"
                                            android:layout_marginTop="14dp"
                                            android:layout_marginLeft="20dp" />

                                        <TextView
                                            android:id="@+id/layout_artist_bio_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="14sp"
                                            android:textColor="@color/dark_secondary"
                                            android:text="@string/hello_bio_full"
                                            android:layout_below="@+id/layout_artist_bio_name"
                                            android:lineSpacingMultiplier="1.1"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp" />

                                        <View
                                            android:id="@+id/layout_artist_bio_divider"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_alignLeft="@+id/layout_artist_bio_text"
                                            android:layout_below="@+id/layout_artist_bio_text"
                                            android:background="@color/dark_divider" />

                                        <TextView
                                            android:id="@+id/layout_artist_bio_source"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:textColor="@color/dark_hint"
                                            android:textStyle="italic"
                                            android:text="@string/hello_bio_source"
                                            android:layout_below="@+id/layout_artist_bio_divider"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_marginBottom="10dp" />
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/layout_artist_detail_about"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/layout_artist_about_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hello_about"
                                    android:textColor="@color/hello"
                                    android:padding="16dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_divider" />

                                <RelativeLayout
                                    android:id="@+id/layout_artist_web"
                                    android:clickable="true"
                                    android:background="?selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:minHeight="64dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/layout_artist_web_icon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="18dp"
                                        android:src="@drawable/about_web" />

                                    <LinearLayout
                                        android:id="@+id/layout_artist_web_text_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:padding="4dp"
                                        android:layout_marginLeft="14dp"
                                        android:layout_toRightOf="@+id/layout_artist_web_icon"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/layout_artist_web_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:textColor="@color/dark_primary"
                                            android:text="@string/wb"
                                            android:paddingTop="10dp" />

                                        <TextView
                                            android:id="@+id/layout_artist_web_link"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:textColor="@color/dark_secondary"
                                            android:textStyle="italic"
                                            android:text="@string/hello_wb"
                                            android:paddingTop="8dp"
                                            android:paddingBottom="4dp"/>
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignLeft="@+id/layout_artist_web_text_layout"
                                        android:background="@color/dark_divider"
                                        android:layout_alignParentBottom="true" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/layout_artist_facebook"
                                    android:clickable="true"
                                    android:background="?selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:minHeight="64dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/layout_artist_facebook_icon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="18dp"
                                        android:src="@drawable/about_facebook" />

                                    <TextView
                                        android:id="@+id/layout_artist_facebook_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:textSize="16sp"
                                        android:textColor="@color/dark_primary"
                                        android:text="@string/fb"
                                        android:layout_toRightOf="@+id/layout_artist_facebook_icon"
                                        android:paddingTop="14dp"
                                        android:paddingLeft="14dp" />

                                    <TextView
                                        android:id="@+id/layout_artist_facebook_link"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:textSize="12sp"
                                        android:textColor="@color/dark_secondary"
                                        android:textStyle="italic"
                                        android:text="@string/hello_fb"
                                        android:layout_toRightOf="@+id/layout_artist_facebook_icon"
                                        android:layout_below="@+id/layout_artist_facebook_text"
                                        android:paddingTop="4dp"
                                        android:paddingLeft="14dp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignLeft="@+id/layout_artist_facebook_text"
                                        android:background="@color/dark_divider"
                                        android:layout_alignParentBottom="true" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/layout_artist_twitter"
                                    android:clickable="true"
                                    android:background="?selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:minHeight="64dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/layout_artist_twitter_icon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="18dp"
                                        android:src="@drawable/about_twitter" />

                                    <TextView
                                        android:id="@+id/layout_artist_twitter_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:textSize="16sp"
                                        android:textColor="@color/dark_primary"
                                        android:text="@string/tw"
                                        android:layout_toRightOf="@+id/layout_artist_twitter_icon"
                                        android:paddingTop="14dp"
                                        android:paddingLeft="14dp" />

                                    <TextView
                                        android:id="@+id/layout_artist_twitter_link"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:textSize="12sp"
                                        android:textColor="@color/dark_secondary"
                                        android:textStyle="italic"
                                        android:text="@string/hello_tw"
                                        android:layout_toRightOf="@+id/layout_artist_twitter_icon"
                                        android:layout_below="@+id/layout_artist_twitter_text"
                                        android:paddingTop="4dp"
                                        android:paddingLeft="14dp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignLeft="@+id/layout_artist_twitter_text"
                                        android:background="@color/dark_divider"
                                        android:layout_alignParentBottom="true" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/layout_artist_youtube"
                                    android:clickable="true"
                                    android:background="?selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:minHeight="64dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/layout_artist_youtube_icon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="18dp"
                                        android:src="@drawable/about_youtube" />

                                    <TextView
                                        android:id="@+id/layout_artist_youtube_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:textSize="16sp"
                                        android:textColor="@color/dark_primary"
                                        android:text="@string/yt"
                                        android:layout_toRightOf="@+id/layout_artist_youtube_icon"
                                        android:paddingTop="14dp"
                                        android:paddingLeft="14dp" />

                                    <TextView
                                        android:id="@+id/layout_artist_youtube_link"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:textSize="12sp"
                                        android:textColor="@color/dark_secondary"
                                        android:textStyle="italic"
                                        android:text="@string/hello_yt"
                                        android:layout_toRightOf="@+id/layout_artist_youtube_icon"
                                        android:layout_below="@+id/layout_artist_youtube_text"
                                        android:paddingTop="4dp"
                                        android:paddingLeft="14dp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignLeft="@+id/layout_artist_youtube_text"
                                        android:background="@color/dark_divider"
                                        android:layout_alignParentBottom="true" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/layout_artist_soundcloud"
                                    android:clickable="true"
                                    android:background="?selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:minHeight="64dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/layout_artist_soundcloud_icon"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="18dp"
                                        android:src="@drawable/about_soundcloud" />

                                    <TextView
                                        android:id="@+id/layout_artist_soundcloud_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:textSize="16sp"
                                        android:textColor="@color/dark_primary"
                                        android:text="@string/sc"
                                        android:layout_toRightOf="@+id/layout_artist_soundcloud_icon"
                                        android:paddingTop="14dp"
                                        android:paddingLeft="14dp" />

                                    <TextView
                                        android:id="@+id/layout_artist_soundcloud_link"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:textSize="12sp"
                                        android:textColor="@color/dark_secondary"
                                        android:textStyle="italic"
                                        android:text="@string/hello_sc"
                                        android:layout_toRightOf="@+id/layout_artist_soundcloud_icon"
                                        android:layout_below="@+id/layout_artist_soundcloud_text"
                                        android:paddingTop="4dp"
                                        android:paddingLeft="14dp" />
                                </RelativeLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <View
                        android:id="@+id/layout_artist_margin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>

    <View
        android:id="@+id/statusbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/hello" />

    <View
        android:visibility="gone"
        android:id="@+id/layout_artist_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent" />

</RelativeLayout>
