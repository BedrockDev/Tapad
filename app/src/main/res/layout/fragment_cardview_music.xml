<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_music_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_artist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardview_music_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/about_album_hello"
                android:transitionName="transition"
                android:layout_alignParentTop="true"/>

            <RelativeLayout
                android:id="@+id/cardview_music_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview_music_image"
                android:layout_alignParentBottom="true"
                android:padding="16dp">

                <TextView
                    android:id="@+id/cardview_music_now_playing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cardview_now_playing"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/cardview_music_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview_music_now_playing"
                    android:layout_marginTop="10dp"
                    android:text="@string/preset_hello_full"
                    android:textColor="@color/dark_secondary"
                    android:textStyle="italic"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:id="@+id/cardview_music_more_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/cardview_music_song"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cardview_music_explore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/explore_ac"
                        android:textColor="@color/hello"/>

                    <TextView
                        android:id="@+id/cardview_music_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/change_ac"
                        android:textColor="@color/hello"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>