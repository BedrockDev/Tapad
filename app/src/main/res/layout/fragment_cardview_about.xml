<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_about_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/cardview_about_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/cardview_background_tapad"
                android:transitionName="tapad"
                android:layout_alignParentTop="true"/>

            <RelativeLayout
                android:id="@+id/cardview_about_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview_about_image"
                android:padding="16dp">

                <TextView
                    android:id="@+id/cardview_about_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tapad_about"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/cardview_about_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview_about_title"
                    android:layout_marginTop="10dp"
                    android:text="@string/tapad_about_desc"
                    android:textColor="@color/dark_secondary"
                    android:textStyle="italic"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:id="@+id/cardview_about_more_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/cardview_about_subtitle"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cardview_about_explore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/cardview_explore"
                        android:textColor="@color/bg_screen1"/>

                    <TextView
                        android:id="@+id/cardview_about_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/cardview_settings"
                        android:textColor="@color/bg_screen1"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>